<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/txtLabelKartAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kart Adı: "
        android:textSize="18dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <EditText
        android:id="@+id/edtKartAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/txtLabelKartAdi"/>

    <TextView
        android:id="@+id/title_bilgiler"
        android:layout_width="wrap_content"
        android:text="Kart Bilgileri"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#999999"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:textStyle="bold"
        android:layout_below="@id/edtKartAdi"
        />

    <TextView
        android:id="@+id/txtKartBilgileri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#aaaaaa"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@id/title_bilgiler"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtKartBilgileri"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btnKaydet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" Kaydet "
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btnIptal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" İptal "
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>


</RelativeLayout>